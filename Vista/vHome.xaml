<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bguallasaminS5.Vista.vHome"
             Title="vHome">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="Semana 5 SQLITE"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="txtNombre"
            Placeholder="Nombre"
            VerticalOptions="Center"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button
                x:Name="btnInsertar"
                Text="Insertar"
   
                VerticalOptions="Center" 
                Clicked="btnInsertar_Clicked"
                Grid.Row="0"
                Grid.Column="0"/>
            <Label x:Name="statusMessage"
                   FontSize="18"
                   TextColor="Red"
                   Grid.Row="1"
                   Grid.Column="0"/>
            <Button x:Name="btnLiustar"
                   Text="Listar Â¨Persona"
                  Clicked="btnLiustar_Clicked"
                    Grid.Row="2"
                    Grid.Column="0"/>
            <CollectionView x:Name="listPersonas"
                            Grid.Row="3">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label
                                Text="{Binding Id}"
                                Grid.Column="0"/>
                            <Label Text="{Binding Nombre}"
                                Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>